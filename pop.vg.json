{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 600,
    "background": "transparent",
    "projection": {"type": "equalEarth"},
    "params": [
      {
        "name": "pop_above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 1000,
          "step": 50,
          "name": "Minimum Pop density: "
        }
      }
    ],
    "layer": [
      {
        "data": {
          "url": "ne_50m_ocean.json",
          "format": {"type": "topojson", "feature": "ne_50m_ocean"}
        },
        "mark": {"type": "geoshape", "fill": "royalblue"}
      },
      {
        "data": {
          "url": "ne_50m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "#313132"},
        "encoding": {
          "tooltip": [
            {
              "field": "properties.NAME",
              "type": "nominal",
              "title": "Data is not available for",
              "format": ""
            }
          ]
        }
      },
      {
        "data": {
          "url": "ne_50m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
        },
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "pop_density.csv",
                "format": {"type": "csv"}
              },
              "key": "country",
              "fields": ["density"]
            }
          }
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "field": "density",
            "type": "quantitative",
            "title": "Population density",
            "scale": {
              "type": "threshold",
              "domain": [35, 75, 110, 150, 180, 210],
              "range": ["#ff9999", "#ff6666", "#ff4d4d", "#ff1a1a", "#cc0000", "#990000", "#660000"]
            },
            "legend": {
              "titleFont": "Consolas",
              "titleFontSize": 14,
              "labelFontSize": 12,
              "symbolSize": 200,
              "symbolStrokeWidth": 5,
              "padding": 10,
              "orient": "bottom"
            },
            "condition": {
              "test": "datum.density < pop_above",
              "value": "lightgrey"
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {
              "field": "density",
              "type": "quantitative",
              "title": "Population Density",
              "format": ".2f"
            }
          ]
        }
      },
      {
        "data": {
          "url": "ne_110m_graticules_30.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "stroke": "darkgrey", "fill": null}
      }
    ],
    "config": {
      "view": {
        "stroke": "transparent"
      }
    }
  }
  